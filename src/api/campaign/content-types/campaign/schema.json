{
  "kind": "collectionType",
  "collectionName": "campaigns",
  "info": {
    "singularName": "campaign",
    "pluralName": "campaigns",
    "displayName": "Campaign",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "target": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "amount_raised": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "conclusion": {
      "type": "richtext"
    },
    "time_to_read": {
      "type": "integer",
      "required": true
    },
    "introduction": {
      "type": "text",
      "minLength": 25
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "footer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::footer.footer"
    },
    "donations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::donation.donation",
      "mappedBy": "campaign"
    },
    "completed": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
